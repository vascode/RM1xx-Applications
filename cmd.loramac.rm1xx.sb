function HandlerAttrRead(hConn,hAttr,nSts) as integer
    dim a$,ofst  
    print "\nEVATTRREAD(hConn=";hConn;",handle=";hAttr;",status=";nSts;")"
    if nSts == 0 then
        rc = BleGattcReadData(hConn,hAttr,ofst,a$)
        if rc==0 then
            print "\n >BleGattcReadData(data=";StrHexize$(a$);",offset=";ofst;")"
